<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="#FAFAFA">
                    </solid>

                    <corners android:radius="3dp" />

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#000000" />
                </shape>
            </item>
            <item
                android:width="28dp"
                android:height="28dp"
                android:top="1dp"
                android:gravity="end"
                android:drawable="@drawable/ic_arrow_drop_down_black_24dp" />
        </layer-list>
    </item>
</selector>
