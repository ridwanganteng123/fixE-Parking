<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.opatan.e_parking_admin.fragments.StatistikDetailFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="15dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/content_petugas"
            android:layout_width="match_parent"
            android:isScrollContainer="true"
            android:paddingBottom="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:textSize="13pt"
                    android:layout_marginVertical="2dp"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:layout_height="wrap_content"
                    android:text="Statistik"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ProgressBar
                    android:id="@+id/circularProgressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:indeterminate="false"
                    android:layout_marginVertical="10dp"
                    android:max="100"
                    android:progress="50"
                    android:layout_centerInParent="true"
                    android:progressDrawable="@drawable/circular"
                    android:secondaryProgress="100"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:gravity="center"
                    android:text="0%"
                    android:layout_centerInParent="true"
                    android:textSize="18pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="25dp"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/prev_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_arrow_back_black_24dp"
                            android:background="?selectableItemBackgroundBorderless" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/tgl_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tanggal"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="17dp" />

                        </RelativeLayout>

                        <ImageButton
                            android:id="@+id/next_date"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/hadir_judul1"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="?selectableItemBackground"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_equalizer_hadir_24dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/judul11"
                            android:layout_width="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/deskripsi11"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/Black"
                            android:text="Jumlah Siswa Yang Di Scan" />

                        <TextView
                            android:id="@+id/deskripsi11"
                            android:layout_width="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/judul11"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Siswa yang telah di scan" />

                        <TextView
                            android:id="@+id/nyeken_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginEnd="20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hadir_judul"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="?selectableItemBackground"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/judul6"
                            android:layout_width="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/deskripsi6"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/Black"
                            android:text="Siswa Yang Terdaftar" />

                        <TextView
                            android:id="@+id/deskripsi6"
                            android:layout_width="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/judul6"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Siswa yang telah terdaftar" />

                        <TextView
                            android:id="@+id/jumlah_siswa_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginEnd="20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_siswa"
            android:layout_width="match_parent"
            android:paddingVertical="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <TextView
                    android:textSize="13pt"
                    android:layout_marginVertical="7dp"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="25dp"
                    android:layout_height="wrap_content"
                    android:text="Statistik"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    </com.github.mikephil.charting.charts.PieChart>

                </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/hadir_section"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_equalizer_hadir_24dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/judul1"
                            android:layout_width="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/deskripsi1"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/Black"
                            android:text="Tepat Waktu" />

                        <TextView
                            android:id="@+id/deskripsi1"
                            android:layout_width="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/judul1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Datang Sebelum Pukul 06:45" />

                        <TextView
                            android:id="@+id/hadir_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginEnd="20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/terlambat_section"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_equalizer_terlambat_24dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/judul2"
                            android:layout_width="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/deskripsi2"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/Black"
                            android:text="Terlambat" />

                        <TextView
                            android:id="@+id/deskripsi2"
                            android:layout_width="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/judul2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Datang Sebelum Pukul 06:45" />

                        <TextView
                            android:id="@+id/terlambat_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginEnd="20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tidak_masuk_section"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_equalizer_telat_24dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/judul3"
                            android:layout_width="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/deskripsi3"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/Black"
                            android:text="Tidak Masuk" />

                        <TextView
                            android:id="@+id/deskripsi3"
                            android:layout_width="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/judul3"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Tidak Ada Data Lebih Dari 12:00" />

                        <TextView
                            android:id="@+id/tidak_masuk_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14pt"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginEnd="20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
