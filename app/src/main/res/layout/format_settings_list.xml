<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:padding="7dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/icon_setting"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_white_18dp" />

        <TextView
            android:id="@+id/tulisan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/icon_1"
            android:text="Profil"
            android:background="@color/transparent_black_percent_00"/>

        <TextView
            android:id="@+id/tulisan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_1"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_below="@+id/tulisan_1"
            android:text="Edit Profile" />

        <TextView
            android:id="@+id/garis_1"
            android:layout_width="10dp"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:background="@color/startColor"/>

    </RelativeLayout>

</LinearLayout>