<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/format_setting_atas"
    tools:context=".SettingActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:gravity="center_vertical"
        android:text="Setting"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <ImageButton
        android:id="@+id/back_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:background="?selectableItemBackgroundBorderless"
        android:textColor="#0FEF82"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/icon_setting"
                android:padding="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_white_18dp" />

            <TextView
                android:id="@+id/tulisan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_1"
                android:text="Profil"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_1"
                android:text="Edit Profile" />

            <TextView
                android:id="@+id/garis_1"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="68dp"
                android:src="@drawable/ic_vpn_key_white_24dp"
                android:padding="13dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_setting" />

            <TextView
                android:id="@+id/tulisan_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_2"
                android:text="Akun"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_2"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_2"
                android:text="Privasi, Keamanan, Password" />

            <TextView
                android:id="@+id/garis_2"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="68dp"
                android:src="@drawable/ic_error_white_24dp"
                android:padding="13dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_setting" />

            <TextView
                android:id="@+id/tulisan_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_3"
                android:text="Notifikasi"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_3"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_3"
                android:text="Nonaktifkan Notifikasi" />

            <TextView
                android:id="@+id/garis_3"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:id="@+id/icon_4"
                android:layout_width="68dp"
                android:padding="13dp"
                android:src="@drawable/ic_brush_white_24dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_setting" />

            <TextView
                android:id="@+id/tulisan_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_4"
                android:text="Tema"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_4"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_4"
                android:text="Tampilan, Warna" />

            <TextView
                android:id="@+id/garis_4"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:id="@+id/icon_5"
                android:layout_width="68dp"
                android:padding="13dp"
                android:src="@drawable/ic_g_translate_black_24dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_setting" />

            <TextView
                android:id="@+id/tulisan_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_5"
                android:text="Bahasa"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_5"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_5"
                android:text="Ganti bahasa, Input" />

            <TextView
                android:id="@+id/garis_5"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <ImageView
                android:id="@+id/icon_6"
                android:layout_width="68dp"
                android:padding="13dp"
                android:src="@drawable/ic_help_white_24dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_setting" />

            <TextView
                android:id="@+id/tulisan_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_6"
                android:text="Bantuan"
                android:textColor="#0FEF82"
                android:background="@color/transparent_black_percent_00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_6"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:layout_below="@+id/tulisan_6"
                android:text="Pusat bantuan, Hubungi Kami" />

            <TextView
                android:id="@+id/garis_6"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent"
                android:background="@color/startColor"/>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>