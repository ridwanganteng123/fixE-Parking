<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setengah_rounded_dialog">

    <RelativeLayout
        android:id="@+id/content_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_centerInParent="true"
            android:layout_height="50dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_dialog"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="9999dp"
                app:cardElevation="0dp"
                app:layout_goneMarginTop="40dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@drawable/background_foto_profil"
                    android:src="@drawable/nanangsaripudin"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Nama" />

            <TextView
                android:id="@+id/nama_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Nama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Kelas" />

            <TextView
                android:id="@+id/kelas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Nama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Plat Nomor" />

            <TextView
                android:id="@+id/plat_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Nama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/plat_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10pt"
                android:layout_height="wrap_content"
                android:text="Nama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tolak"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_light"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:textStyle="bold"
                android:text="Tolak" />

            <Button
                android:id="@+id/terima"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@color/startColor"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="Konfirmasi" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>