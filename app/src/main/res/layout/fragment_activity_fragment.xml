<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:fillViewport="true"
    android:isScrollContainer="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:isScrollContainer="true"
        android:paddingBottom="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_show_chart_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Data History"
                android:textSize="18dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ProgressBar
                android:id="@+id/circularProgressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:indeterminate="false"
                android:layout_marginVertical="10dp"
                android:max="100"
                android:progress="50"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular"
                android:secondaryProgress="100"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="0%"
                android:layout_centerInParent="true"
                android:textSize="18pt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/prev_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:background="?selectableItemBackgroundBorderless" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/tgl_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="15dp"
                            android:textSize="17dp" />

                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/next_date"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/ic_arrow_forward_black_24dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hadir_judul"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="?selectableItemBackground"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_equalizer_hadir_24dp"
                android:layout_marginRight="22dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/judul1"
                        android:layout_width="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/deskripsi1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:text="Siswa Yang Telah Di Scan" />

                    <TextView
                        android:id="@+id/deskripsi1"
                        android:layout_width="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/judul1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Siswa yang telah di scan" />

                    <TextView
                        android:id="@+id/hadir_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14pt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="20dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/jumlah_judul"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="?selectableItemBackground"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginRight="22dp"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/judul2"
                        android:layout_width="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/deskripsi2"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/Black"
                        android:text="Jumlah Siswa Terdaftar" />

                    <TextView
                        android:id="@+id/deskripsi2"
                        android:layout_width="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/judul2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Jumlah Siswa Terdaftar" />

                    <TextView
                        android:id="@+id/jumlah_siswa_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="14pt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="20dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>